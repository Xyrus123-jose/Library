@model IEnumerable<Library.Models.Category>

@{
    ViewData["Title"] = "CategoryList";
    Layout = "~/Pages/Layout.cshtml";
}

<h1>CategoryList</h1>
<div class="d-flex rounded justify-content-center align-items-center flex-column" style="height: 100vh;">
<div class="d-flex align-items-center mb-4">
    <input type="text" class="form-control rounded" placeholder="Enter category" style="width: 300px; margin-right: 15px;">

   <a  asp-action="AddCategory"class="btn btn-success rounded">Add New</a>
</div>

<div class="mt-3">
    <table class="table mx-auto shadow rounded" style="width: auto; min-width: 400px;">
        <thead class="thead-dark rounded">
            <tr>
                <th scope="col">@Html.DisplayNameFor(model => model.CategoryName)</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="border-bottom">
                    <td> @Html.DisplayFor(modelItem => item.CategoryName)</td>
                <td>
                     <a asp-action="Edit" asp-route-id="@item.CategoryID" class="btn btn-info rounded btn-sm ms-2">Edit</a>
                    |
                        <a asp-action="Delete" asp-route-id="@item.CategoryID" class="btn btn-danger rounded btn-sm ms-2">Delete</a>
                </td>
            </tr>}
        </tbody>
    </table>
</div>
</div>
